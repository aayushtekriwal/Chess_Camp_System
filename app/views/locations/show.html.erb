<p id="notice"><%= notice %></p>
<h3>Location Details</h3><br />

<p>
  <strong>Name:</strong>
  <%= @location.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @location.street_1 %>, <%= @location.street_2 %> <br>
  <%= @location.city %>, <%= @location.state %> <%= @location.zip %>
</p>

<p>
  <strong>Maximum Capacity:</strong>
  <%= @location.max_capacity %>
</p>

<p>
  <strong>Active:</strong>
  <%= @location.active ? "Yes" : "No" %>
</p>
 
<strong>Map:</strong> <br><br>
<%= image_tag @location.create_map_link %> <br><br>

<%= link_to "Edit this Location", edit_location_path(@location), class: "button tiny radius" %>&nbsp;&nbsp;
<%= link_to "Back", locations_path, class: "button tiny radius" %>&nbsp;&nbsp;
