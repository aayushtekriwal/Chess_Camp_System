<h3>User Details</h3>
<hr class="style-one" ><br>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>


<p>
  <strong>Instructor:</strong>
  <%= @user.instructor.proper_name %>
</p>

<p>
  <strong>Role:</strong>
  <%= @user.role.capitalize %>
</p>

<p>
  <strong>Active:</strong>
  <%= @user.active ? "Yes" : "No" %>
</p>


<%= link_to "Display All Users", users_path, class: "button tiny radius" %>&nbsp;&nbsp;
<%= link_to "Edit User", edit_instructor_path(@user.instructor), class: "button tiny radius" %>&nbsp;&nbsp;
<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } , class: "button tiny radius"%>
