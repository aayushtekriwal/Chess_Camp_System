<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <% if @current_user.role == "admin" %>
      <%= f.input :role, :collection => User::ROLES, :prompt => true %>
    <% end %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Display User', @user , :class => 'button secondary radius'%>
    <%= link_to 'Back to list of users', users_path, :class => 'button secondary radius' %>
  </div>
<% end %>
