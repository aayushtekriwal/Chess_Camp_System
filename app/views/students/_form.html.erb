<%= simple_form_for(@student) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.select :family_id, options_for_select(Family.active.alphabetical.map{ |s| [s.family_name, s.id] }) , prompt: "Select family..."%>
    <%= f.input :date_of_birth, label: "Date of Birth", as: :string, input_html: {:class => "avg datepicker"} %>        

    <%= f.input :rating %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Display Student', @student , :class => 'button secondary radius'%>
    <%= link_to 'Back to list of students', students_path, :class => 'button secondary radius' %>
  </div>
<% end %>
