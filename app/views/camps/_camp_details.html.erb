<h3>Camp Details</h3>
<hr class="style-one" ><br>
<strong>Name :&nbsp;&nbsp;</strong> 
  <%= link_to @camp.name, curriculum_path(@camp.curriculum) %><br /><br />

<strong>Dates :&nbsp;&nbsp;</strong> 
  <%= @camp.start_date.strftime('%m/%d/%y') %> 
  <% if @camp.start_date != @camp.end_date %>
    <%= "- #{@camp.end_date.strftime('%m/%d/%y')}" %>
  <% end %>
  <br /><br />

<strong>Time :&nbsp;&nbsp;</strong> 
  <%= @camp.time_slot == "am" ? "Morning" : "Afternoon" %><br /><br />

<strong>Location :&nbsp;&nbsp;</strong> 
  <%= link_to @camp.location.name, location_path(@camp.location) %><br /><br />

<strong>Cost :&nbsp;&nbsp;</strong> 
  <%= number_to_currency(@camp.cost) %><br /><br />

<strong>Rating :&nbsp;&nbsp;</strong> 
  <%= @camp.curriculum.min_rating %> - <%= @camp.curriculum.max_rating %><br /><br />

<strong>Max Students :&nbsp;&nbsp;</strong> 
  <%= @camp.max_students %><br /><br />

<strong>Registrations &nbsp;</strong>(<%=@camp.registrations.count%>)<br /><br />

<strong>Camp Description : &nbsp;</strong><br><br>(<%=@camp.curriculum.description%>)<br /><br />


<% if !current_user.nil? && ((@camp.instructors.include?(current_user.instructor)) or (current_user.role == "admin"))%>
  <strong>List of Students in Camp :&nbsp;&nbsp;</strong> <br><br>
    <ol><%= render :partial => "display_students" %></ol>
<% end %>

<strong>Active ?&nbsp;&nbsp;</strong>
  <%= @camp.active ? "Yes" : "No" %><br /><br />

<% if !current_user.nil? %>
  <%= link_to "Display All Camps", camps_path, class: "button tiny radius" %>&nbsp;&nbsp;
  <%= link_to "Edit Camp", edit_camp_path(@camp), class: "button tiny radius" %>&nbsp;&nbsp;
  <%= link_to 'Delete Camp', camp_path(@camp), data: { confirm: 'Are you sure you want to permanently remove this camp from the system?' }, method: :delete, class: "button tiny radius alert" %>
<% else %>
  <%= link_to 'Back', home_path, class: "button tiny radius" %>
<% end %>