<%= simple_form_for(@family) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :family_name %>
    <%= f.input :parent_first_name %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'button radius' %>
    <%= link_to 'Display Family', @family , :class => 'button secondary radius'%>
    <%= link_to 'Back to list of families', families_path, :class => 'button secondary radius' %>
  </div>
<% end %>
